<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:weightSum="1">

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:id="@+id/radioGroup1">

            <RadioButton
                android:text="Your Apartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/private_button"
                android:layout_weight="1" />

            <RadioButton
                android:text="Public Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/public_button"
                android:layout_weight="1" />
        </RadioGroup>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.95">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/title_field"
                android:hint="Add title"
                android:layout_weight="0.1"
                android:ellipsize="end"
                android:maxLines="1"
                android:isScrollContainer="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/desc_field"
                android:hint="Describe the problem"
                android:layout_weight="0.9"
                android:gravity="top|center_vertical"
                android:ellipsize="end"
                android:maxLines="12" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView"
                android:layout_weight="0.3"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:maxWidth="100dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/camera_button"
                    android:layout_weight="0.10"
                    android:onClick="cameraButtonClick"
                    android:background="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Camera"
                    android:textColor="@android:color/background_light"
                    android:layout_gravity="right"
                    android:layout_margin="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_button"
                    android:onClick="sendButtonClick"
                    android:layout_gravity="right"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_weight="0.10"
                    android:text="Send"
                    android:textColor="@android:color/background_light"
                    android:layout_margin="2dp" />

            </LinearLayout>
        </GridLayout>

    </LinearLayout>

</RelativeLayout>
