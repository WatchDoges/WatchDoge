<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05">

                <RadioButton
                    android:text="Your Apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/private_button"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="Public Area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/public_button"
                    android:layout_weight="1" />
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/title_field"
                android:hint="Add title"
                android:layout_weight="0.05"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/desc_field"
                android:hint="Describe the problem"
                android:layout_weight="0.9"
                android:gravity="top|center_vertical" />

            <GridLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:minHeight="17dp"
                android:layout_gravity="center_horizontal"
                android:columnCount="4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/imageView"
                    android:layout_weight="0.10"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_button"
                    android:onClick="sendButtonClick"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_weight="0.10"
                    android:text="Send"
                    android:textColor="@android:color/background_light"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_gravity="left" />

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/camera_button"
                    android:layout_weight="0.10"
                    android:onClick="cameraButtonClick"
                    android:background="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Camera"
                    android:textColor="@android:color/background_light"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="right" />
            </GridLayout>

        </LinearLayout>
</RelativeLayout>
